{
  "compileOnSave": true,
  "include": [
    "*.py",
    "main.py",
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true
  }
}